<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/souffle"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/viewAllImg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/muli_bold"
            android:id="@+id/viewAllName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/viewAllImg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut lobortis tellus est, at iaculis ligula tempus ac. Quisque in nibh."
            android:layout_toEndOf="@id/viewAllImg"
            android:id="@+id/viewAllDescription"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/muli_semibold"
            android:layout_below="@id/viewAllName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:gravity="center_vertical"
            android:fontFamily="@font/muli_bold"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:id="@+id/viewAllRating"
            android:layout_toEndOf="@id/viewAllImg"
            android:layout_below="@id/viewAllDescription"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:drawableStartCompat="@drawable/ic_rating" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.95"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:fontFamily="@font/muli_bold"
            android:layout_toEndOf="@id/viewAllRating"
            android:layout_marginTop="11dp"
            android:id="@+id/viewAllPrice"
            android:layout_marginStart="5dp"
            android:layout_below="@id/viewAllDescription"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_dollar" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>